{% extends 'base.html.jinja' %}

{% block contentSubject %}
    <div class="updateForm">
        <h1> {% block title %} Update subject {% endblock %}</h1>
        <form method="POST">
            <div>
                <label for="teacherFirstName">Teacher's First Name: </label><br>
                <input type="string" name="teacherFirstName" placeholder="Nombre profesor" value="{{subjectX.nombreProf}}">
                <br>
            </div>
            <div>
                <label for="teacherLastName">Teacher's Last Name: </label><br>
                <input type="string" name="teacherLastName" placeholder="Apellido profesor" value="{{subjectX.apellidoProf}}">
                <br>
            </div>
            <div>
                <label for="teacherId">Teacher ID: </label><br>
                <input type="string" name="teacherId" placeholder="Teacher ID" value="{{subjectX.idProf}}">
                <br>
            </div>
            <div>
                <label for="subjectName">Subject's name:</label><br>
                <input type="string" name="subjectName" placeholder="Subject Name" value="{{subjectX.nombreM}}">
                <br>
            </div>
            <div>
                <label for="subjectPurpose">Subject's purpose: </label><br>
                <input type="string" name="subjectPurpose" placeholder="Subject purpose" value="{{subjectX.objetM}}">
                <br>
            </div>
            <div>
                <label for="durationSubject"> Duration Subject: </label><br>
                <input type="string" name="durationSubject" placeholder="Duration Subject" value="{{subjectX.duracion}}">
                <br>
            </div>
            <div>
                <label for="minimumPassingGrade">Minimum Passing Grade: </label><br>
                <input type="string" name="minimumPassingGrade" placeholder="Minimum Passing Grade" value="{{subjectX.notaMin}}">
                <br>
            </div>
            <input type="submit" value="Submit">
       </form>
    </div>
{% endblock %}